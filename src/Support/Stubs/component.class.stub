<?php

namespace {{namespace}};

use Illuminate\View\Component;

class {{className}} extends Component
{

    public function __construct()
    {
    }

    public function render()
    {
        $bladeView = view('{{viewName}}');

        // Automatically push CSS/JS to the stack
        $bladeView->with([
            'componentCss' => asset("{{cssPath}}/{{name}}.css"),
            'componentJs' => asset("{{jsPath}}/{{name}}.js"),
        ]);

        return $bladeView;
    }
}
