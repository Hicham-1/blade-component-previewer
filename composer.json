{
    "name": "h1ch4m/blade-component-previewer",
    "description": "A Laravel package for visually creating, editing, and previewing Blade components with live editing of Blade, CSS, and JS.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "H1ch4m\\BladeComponentPreviewer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "h1ch4m"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/support": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "laravel/framework": ">=10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "H1ch4m\\BladeComponentPreviewer\\BladeComponentPreviewerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}